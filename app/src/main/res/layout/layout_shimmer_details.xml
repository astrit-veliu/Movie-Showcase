<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.chip.Chip
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightgrey"/>

        <com.google.android.material.chip.Chip
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightgrey"/>

        <com.google.android.material.chip.Chip
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightgrey"/>

        <com.google.android.material.chip.Chip
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightgrey"/>

        <com.google.android.material.chip.Chip
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/lightgrey"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:background="@color/lightgrey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@color/lightgrey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@color/lightgrey"/>




    <LinearLayout
      android:layout_marginTop="20dp"
        android:background="@drawable/btn_corner5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="70dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:background="@drawable/round_grey_chip"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />



        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/lightgrey"></View>


        <TextView
            android:layout_width="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:paddingBottom="3dp"
            android:background="@drawable/round_grey_chip"
            android:layout_below="@+id/dividerCast"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />



        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crewView"
            android:orientation="horizontal">

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.av.movieshowcase.utils.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="13dp"
                android:background="@color/lightgrey"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp"
                app:riv_corner_radius="360dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>